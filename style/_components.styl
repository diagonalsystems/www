a
  color: $purple
  transition-duration: 0.3s, 0.3s
  transition-property: background-color, color
  text-decoration: none
a:visited
  color: $purple
a:hover:not(.white)
  background-color: $red
  color: $white
  transition-duration: 0.3s, 0.3s
  transition-property: background-color, color

hr
  @extends .mv5, .w4
  border-color: #999
  border-width: 0.5px
    
.button
  @extends .input-reset, .ba, .b--black, .br0
  @extends .bg-black, .white
  @extends .pv2, .ph3, .mv2
  transition-duration: 0.3s, 0.3s
  transition-property: background-color, color
  &:hover
    @extends .pointer:hover, .hover-bg-red:hover
    transition-duration: 0.3s, 0.3s
    transition-property: background-color, color

ul.tags
  @extends .list, .pl0
  li
    @extends .dib, .pr2
    a
      @extends .pv1, .ph3, .pr2, .dib
      @extends .link, .bg-dark-gray, .white, .f7, .br1
      transition-duration: 0.3s, 0.3s
      transition-property: background-color, color
      &:hover
        background-color: $red
        transition-duration: 0.3s, 0.3s
        transition-property: background-color, color

code
  background-color: $black
  color: $white
  border-radius: 3px
  @extends .pa1, .f7
  
pre
  code
    display: inline-block
    width: 100%
    overflow-x: scroll
    @extends .pa3
