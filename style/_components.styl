a
  color: $dark-blue
  &:visited
    color: $darker-blue
    
.button
  @extends .input-reset, .ba, .b--black, .br0
  @extends .bg-black, .white
  @extends .pv2, .ph3, .mv2
  transition: 0.3s
  &:hover
    @extends .pointer:hover, .hover-bg-red:hover
    transition: 0.3s

ul.tags
  @extends .list, .pl0
  li
    @extends .dib, .pr2
    a
      @extends .pv1, .ph3, .pr2, .dib
      @extends .link, .bg-dark-gray, .white, .f7, .br1
      &:hover
        background-color: $red
        transition: 0.3s

code
  background-color: $black
  color: $white
  border-radius: 3px
  @extends .pa1, .f7
  
pre
  code
    display: inline-block
    width: 100%
    overflow-x: scroll
    @extends .pa3
