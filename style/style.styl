@import 'style/vendor/tachyons.4.11.2.styl'
@import 'style/vendor/debug.grid.css'
@import 'style/_colors.styl'

html, body
  font-size: 20px
  min-height: 100vh

body
  overflow-y: scroll
  background-color: #131313

body, p, small, a, li
  font-family: 'Open Sans', -apple-system,BlinkMacSystemFont,avenir next,avenir,helvetica neue,helvetica,ubuntu,roboto,noto,segoe ui,arial,sans-serif

main
  min-height: 80vh !important
  
.min-vh-80
  min-height: 80vh

.container
  width: 100%
  max-width: 960px
  padding: 0 1rem
  flex: 1 1 auto
  
.t1
  font-size: 2vh

.hero
  min-height: 80vh
  padding-top: 1.5rem
  
.lh-list
  line-height: 1.5rem

article
  max-width: 72ex
  
section
  width: 100%
  display: flex
  justify-content: center

pre
  code
    font-size: 0.8rem
    background-color: #131313
    color: #ffffff
    border-radius: 3px
    display: inline-block
    padding-top: 0.75rem
    padding-bottom: 0.75rem
    padding-left: 1.5rem
    padding-right: 1.5rem
    width: 100%

.home-hero
  background-image: url('bg.png')
  background-position-x: center
  background-repeat-x: repeat

@import 'style/_navbar.styl'
@import 'style/_typography.styl'
@import 'style/_layout.styl'


