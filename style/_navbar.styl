#navbar
  ul 
    list-style: none
    margin: 0
    padding-left: 0

  li 
    color: #fff
    display: block
    float: left
    // padding: 1rem
    position: relative
    text-decoration: none
    
  li a 
    color: #fff
    width: 100%
    height: 100%
    display: inline-block
  li a:hover
    transition-duration: 0.3s, 0.3s, 0.3s
    transition-property: background-color, color, opacity
  //   background-color: $black

  li.item:hover,
  li.item:focus-within 
    cursor: pointer
    background-color: $red
    transition-duration: 0.3s, 0.3s, 0.3s
    transition-property: background-color, color, opacity
    &:before
      content: "\a0";
      // border-bottom: 5px solid $red;
      display: block
      position: absolute
      width: 100%
      top: 0
      left: 0
      height: 100%
      pointer-events: none
      z-index: 100
      transition-duration: 0.3s, 0.3s, 0.3s
      transition-property: background-color, color, opacity

  ul li ul li:hover,
  ul li ul li:focus-within 
    cursor: pointer;
    color: #fff
    background-color: $red
    transition-duration: 0.3s, 0.3s, 0.3s
    transition-property: background-color, color, opacity
    a 
      color: $red

  ul li ul
    background-color: #fff
    visibility: hidden
    opacity: 0
    width: 100%
    min-width: 13rem
    // border-top: 0.25rem solid $black
    position: absolute
    // margin-top: 1rem
    right: 0
    display: none
    white-space: nowrap;
    z-index: 10
    color: $black
    transition-duration: 0.3s, 0.3s, 0.3s
    transition-property: background-color, color, opacity
    a
      color: $black
    *
      display: inline

  ul li:hover > ul,
  ul li:focus-within > ul,
  ul li ul:hover,
  ul li ul:focus
    visibility: visible;
    opacity: 1;
    display: block;
    width: 100%
    min-height: 0
    transition-duration: 0.3s, 0.3s, 0.3s
    transition-property: background-color, color, opacity

  ul li ul li 
    clear: both;
    width: 100%;
    color: $black
    &:focus
      background-color: $black
      color: white

  ul li ul li
    display: inline-block

